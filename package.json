{
  "name": "albi-eco-race",
  "version": "0.0.0",
  "main": "Gruntfile.js",
  "dependencies": {
    "connect": "^3.4.0",
    "serve-static": "^1.10.0",
    "xo": "^0.9.0"
  },
  "xo": {
    "globals": [
      "angular",
      "app",
      "describe",
      "beforeEach",
      "inject",
      "it",
      "expect",
      "module",
      "require"
    ],
    "rules": {
      "linebreak-style": [
        0
      ],
      "no-invalid-this": 0,
      "strict": [
        2,
        "function"
      ],
      "brace-style": [
        2,
        "stroustrup",
        {
          "allowSingleLine": false
        }
      ],
      "global-require": 0
    },
    "ignores": [
      ".tmp/**",
      ".git/**",
      "dist/**",
      "**/bower_components/**"
    ]
  },
  "scripts": {
    "start": "npm install && bower install",
    "dev": "NODE_ENV='DEV' node server.js",
    "test": "xo"
  },
  "devDependencies": {
    "chai": "^3.4.1",
    "grunt": "^0.4.5",
    "grunt-angular-templates": "^0.5.7",
    "grunt-contrib-clean": "^0.6.0",
    "grunt-contrib-concat": "^0.5.1",
    "grunt-contrib-copy": "^0.8.1",
    "grunt-contrib-cssmin": "^0.14.0",
    "grunt-contrib-htmlmin": "^0.5.0",
    "grunt-contrib-imagemin": "^0.9.4",
    "grunt-contrib-jshint": "^0.11.3",
    "grunt-contrib-less": "^1.0.1",
    "grunt-contrib-uglify": "^0.9.2",
    "grunt-if": "^0.1.5",
    "grunt-karma": "^0.12.1",
    "grunt-ng-annotate": "^1.0.1",
    "grunt-preprocess": "^5.0.1",
    "grunt-purifycss": "^0.1.0",
    "grunt-text-replace": "^0.4.0",
    "grunt-usemin": "^3.1.1",
    "install": "^0.1.8",
    "jasmine-core": "^2.3.4",
    "karma": "^0.13.15",
    "karma-chai": "^0.1.0",
    "karma-jasmine": "^0.3.6",
    "karma-mocha": "^0.2.1",
    "karma-phantomjs-launcher": "^0.2.1",
    "karma-sinon": "^1.0.4",
    "load-grunt-tasks": "^3.3.0",
    "mocha": "^2.3.4",
    "phantomjs": "^1.9.18",
    "sinon": "^1.17.2",
    "time-grunt": "^1.2.1"
  }
}
